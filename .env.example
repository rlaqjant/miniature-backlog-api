# Neon Database 설정
# Neon Console (https://console.neon.tech)에서 연결 정보 확인

# JDBC URL (sslmode=require 필수)
DATABASE_URL=jdbc:postgresql://ep-xxxxx-xxxxx.ap-southeast-1.aws.neon.tech/neondb?sslmode=require

# 데이터베이스 사용자명
DATABASE_USERNAME=neondb_owner

# 데이터베이스 비밀번호
DATABASE_PASSWORD=your-password-here

# JPA DDL Auto (개발: update, 운영: validate)
JPA_DDL_AUTO=update

# 서버 포트 (기본값: 8080)
SERVER_PORT=8080

# 로그 레벨 (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=DEBUG

# SQL 로그 레벨
SQL_LOG_LEVEL=DEBUG

# JPA SQL 출력 (개발: true, 운영: false)
JPA_SHOW_SQL=true

# CORS 허용 도메인 (쉼표로 구분)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT 설정
# 256bit 이상의 Base64 인코딩된 시크릿 키 (최소 43자)
# 예시 생성: openssl rand -base64 32
JWT_SECRET=your-base64-encoded-secret-key-here-at-least-256-bits

# JWT 액세스 토큰 유효 시간 (밀리초, 기본값: 3600000 = 1시간)
JWT_ACCESS_TOKEN_VALIDITY_MS=3600000

# 쿠키 설정
# HTTPS 환경에서만 쿠키 전송 (운영: true, 로컬 HTTP 개발: false)
COOKIE_SECURE=true

# SameSite 정책 (운영 크로스도메인: None, 로컬: Lax)
# None 사용 시 COOKIE_SECURE=true 필수
COOKIE_SAME_SITE=None

# 쿠키 도메인 (서브도메인 공유 필요 시 설정, 일반적으로 비워둠)
COOKIE_DOMAIN=

# Cloudflare R2 설정
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=miniature-backlog
R2_PRESIGN_EXPIRATION_MINUTES=15
